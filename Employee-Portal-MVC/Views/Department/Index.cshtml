@model IEnumerable<Employee_Portal_MVC.ModelEntity.DepartmentEntity>
    @{ 
        ViewBag.Title = "Department List";
    }

@*@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}*@

<div class="container-fluid mb-5">
    <div class="row mt-5">
        <div class="col-8 offset-2">

            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-8">
                            <h3>List Of Departments</h3>
                        </div>
                        <div class="col-4">
                            <div class="d-flex">
                                <a href="/Department/Create" class="btn btn-primary ms-auto">Add New</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Select</th>
                                <th>Department Code</th>
                                <th>Department Name</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @using (Html.BeginForm("ViewEmployee", "Department", new { id = item.Id }, FormMethod.Post))
                                        {
                                            <input type="submit" value="=>" class="btn btn-sm"/>
                                        }
                                    </td>
                                    <td>@item.DepartmentCode</td>
                                    <td>
                                        @item.DepartmentName
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            @using (Html.BeginForm("Delete", "Department", new { id = item.Id }, FormMethod.Post))
                                            {
                                                <a href="/Department/Edit/@item.Id" class="btn btn-primary btn-sm">Edit</a>
                                                @*<a href="/Department/Remove" class="btn btn-danger btn-sm">Remove</a>*@
                                                <input type="submit" value="Remove" class="btn btn-danger btn-sm"
                                                       onclick="return confirm('Are you sure? This record will be permanently deleted from system.')" />
                                            }

                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>


        </div>
    </div>

</div>

