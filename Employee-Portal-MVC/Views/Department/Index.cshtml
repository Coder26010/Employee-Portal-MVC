@model IEnumerable<Employee_Portal_MVC.ModelEntity.DepartmentEntity> 
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid mb-5"> 
        <div class="row mt-5">
            <div class="col-8 offset-2">

                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-8">
                                <h3>List Of Departments</h3>
                            </div>
                            <div class="col-4">
                                <div class="d-flex">
                                    <a href="/Department/Create" class="btn btn-primary ms-auto">Add New</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Department Code</th>
                                    <th>Department Name</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.DepartmentCode</td>
                                        <td>
                                            @item.DepartmentName
                                        </td>
                                        <td>
                                            Edit | Remove
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

               
            </div>
        </div>
       
    </div>
</body>
</html>
