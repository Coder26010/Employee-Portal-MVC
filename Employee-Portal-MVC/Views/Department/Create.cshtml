@model  Employee_Portal_MVC.ModelEntity.DepartmentEntity

    <div class="container-fluid mb-5">
        <div class="row mt-5">
            <div class="col-6 offset-3">

                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-8">
                                <h3>Add New Record</h3>
                            </div>
                            <div class="col-4">
                                <div class="d-flex">
                                    <a href="/Department/Index" class="btn btn-primary ms-auto">Back to List</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            @Html.HiddenFor(x => Model.Id)
                            <table class="table">
                                <tr>
                                    <th>Department Code</th>
                                    <td>
                                        @Html.TextBoxFor(x => x.DepartmentCode)
                                    </td>
                                </tr>
                                <tr>
                                    <th>Department Name</th>
                                    <td>
                                        @Html.TextBoxFor(x => x.DepartmentName)
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2">
                                        <input type="submit" value="Save" class="btn btn-primary" />
                                    </td>
                                </tr>
                            </table>
                        </form>
                    </div>
                    @if (ViewBag.Message != null)
                    {
                        <div class="card-footer">
                            <h4 class="text-danger fw-bold">@ViewBag.Message</h4>
                        </div>
                    }

                </div>


            </div>
        </div>

    </div>


