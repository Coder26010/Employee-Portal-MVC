@model  Employee_Portal_MVC.ModelEntity.DepartmentEntity
@{
    ViewBag.Title = "Edit Department";
}
@*@{
        Layout = "~/Views/Shared/_MainLayout.cshtml";
    }*@
<div class="container-fluid mb-5">
    <div class="row mt-5">
        <div class="col-6 offset-3">

            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-8">
                            <h3>List Of Departments</h3>
                        </div>
                        <div class="col-4">
                            <div class="d-flex">
                                <a href="/Department/Create" class="btn btn-primary ms-auto">Add New</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <form method="post">
                        @Html.HiddenFor(x => Model.Id)
                        <table class="table">
                            <tr>
                                <th>Department Code</th>
                                <td>
                                    @Html.TextBoxFor(x => Model.DepartmentCode)
                                    @Html.ValidationMessageFor(x => x.DepartmentCode, "", new { @class = "text-danger" })

                                </td>
                            </tr>
                            <tr>
                                <th>Department Name</th>
                                <td>
                                    @Html.TextBoxFor(x => Model.DepartmentName)
                                    @Html.ValidationMessageFor(x => x.DepartmentName, "", new { @class = "text-danger" })

                                </td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                </td>
                            </tr>
                        </table>
                    </form>
                </div>
                @if (ViewBag.Message != null)
                {
                    <div class="card-footer">
                        <h4 class="text-danger fw-bold">@ViewBag.Message</h4>
                    </div>
                }
            </div>


        </div>
    </div>

</div>

@section JavaScripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
