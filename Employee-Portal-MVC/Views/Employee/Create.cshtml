@model Employee_Portal_MVC.ModelEntity.EmployeeEntity

<div class="container-fluid mb-5">
    <div class="row mt-5">
        <div class="col-6 offset-3">

            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-8">
                            <h3>Add New Record</h3>
                        </div>
                        <div class="col-4">
                            <div class="d-flex">
                                <a href="/Employee/Index" class="btn btn-primary ms-auto">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <table class="table">
                            <tr>
                                <th>Select Department</th>
                                <td>
                                    @Html.DropDownListFor(x => x.DepartmentId,
                                     Model.Departments.Select(x => new SelectListItem() //List<DepartmentEntity> => List<SelectListItem>
                                       {
                                           Text = x.DepartmentName.ToString(),
                                           Value = x.Id.ToString()
                                       }), "Select Department")

                                    @Html.ValidationMessageFor(x => x.DepartmentId, "", new {@class = "text-danger"})
                                </td>
                            </tr>
                            <tr>
                                <th>Employee Full Name</th>
                                <td>
                                    @Html.TextBoxFor(x => x.FullName)
                                    @Html.ValidationMessageFor(x => x.FullName, "", new { @class = "text-danger" })
                                </td>
                            </tr>
                            <tr>
                                <th>Age</th>
                                <td>
                                    @Html.TextBoxFor(x => x.Age)
                                    @Html.ValidationMessageFor(x => x.Age, "", new { @class = "text-danger" })
                                </td>
                            </tr>
                            <tr>
                                <th>Gender</th>
                                <td>
                                    Male : @Html.RadioButtonFor(x => x.Gender, "M", new { group = "EmployeeGender" })
                                    Female : @Html.RadioButtonFor(x => x.Gender, "F", new { group = "EmployeeGender" })
                                    @Html.ValidationMessageFor(x => x.Gender, "", new { @class = "text-danger" })
                                </td>
                            </tr>
                            <tr>
                                <th>Email Address</th>
                                <td>
                                    @Html.TextBoxFor(x => x.EmailAddress)
                                    @Html.ValidationMessageFor(x => x.EmailAddress, "", new { @class = "text-danger" })
                                </td>
                            </tr>
                            <tr>
                                <th>Mobile Number</th>
                                <td>
                                    @Html.TextBoxFor(x => x.MobileNo)
                                    @Html.ValidationMessageFor(x => x.MobileNo, "", new { @class = "text-danger" })
                                </td>
                            </tr>
                            
                            <tr>
                                <th>Profile Photo</th>
                                <td>
                                    <input type="file" name="ProfileImage" id="ProfileImage" class="form-control" required />
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                </td>
                            </tr>
                        </table>
                    </form>
                </div>
                @if (ViewBag.Message != null)
                {
                    <div class="card-footer">
                        <h4 class="text-danger fw-bold">@ViewBag.Message</h4>
                    </div>
                }

            </div>


        </div>
    </div>

</div>
